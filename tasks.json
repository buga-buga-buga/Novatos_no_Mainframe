{
    "version": "2.0.0",
    "tasks": [
    {
        "label": "Submeter JCL",
        "type": "shell",
        "command": ".\\submit_jcl.ps1",
        "args": [
            "${file}"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": [],
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": true
        },
        "options": {
            "shell": {
                "executable": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
                "args": []
            }
        }
    },
        {
            "label": "Compilar C",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": "build"
        },
        {
            "label": "Compilar COBOL",
            "type": "shell",
            "command": "cobc",
            "args": [
                "-x",
                "-free",
                "-I",
                "D:\\Program Files\\gnucobol\\include",
                "-L",
                "D:\\Program Files\\gnucobol\\lib",
                "${file}"
            ],
            "group": "build"
        },
        {
            "label": "Compilar HLASM com ASMLG",
            "type": "shell",
            "command": "D:\\z390\\bat\\asmlg.bat",
            "args": [
                "${fileBasename}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cpp.exe build active file",
            "command": "d:\\Program Files\\MinGW\\bin\\cpp.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "d:\\Program Files\\MinGW\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Compile PL/I via WSL",
            "type": "shell",
            "command": "wsl",
            "args": [
                "bash", "-c", 
                "/root/pli-1.4.0a/plic -C -dELF -lsiaxgo -ew -cn\\(^\\) -i/root/pli-1.4.0a/lib/include /home/buga/HELLO.PL1 -o /home/buga/HELLO.o"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "detail": "Compila arquivo PL/I para objeto via WSL"
        },
        {
            "label": "Link PL/I via WSL",
            "type": "shell",
            "command": "wsl",
            "args": [
                "ld",
                "-z", "muldefs", "-Bstatic", "-M",
                "-o", "/home/buga/HELLO",
                "--oformat=elf32-i386",
                "-melf_i386",
                "-e", "main",
                "/home/buga/HELLO.o",
                "--start-group",
                "/root/pli-1.4.0a/lib/libprf.a",
                "--end-group"
            ],
            "group": "build",
            "dependsOn": "Compile PL/I via WSL",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Linka arquivo objeto PL/I via WSL"
        },
        {
            "label": "Build PL/I via WSL",
            "dependsOrder": "sequence",
            "dependsOn": ["Compile PL/I via WSL", "Link PL/I via WSL"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Compila e linka programa PL/I completo via WSL"
        },
        {
            "label": "Run PL/I via WSL",
            "type": "shell",
            "command": "wsl",
            "args": [
                "bash", "-c", "cd /home/buga && ./HELLO"
            ],
            "group": "test",
            
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "detail": "Executa programa PL/I compilado via WSL"
        },
        {
            "label": "Build and Run PL/I via WSL",
            "dependsOrder": "sequence",
            "dependsOn": ["Build PL/I via WSL", "Run PL/I via WSL"],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Compila, linka e executa programa PL/I via WSL"
        },
        {
            "label": "List PL/I files in WSL",
            "type": "shell",
            "command": "wsl",
            "args": ["ls", "-la", "/home/buga/*.PL1", "/home/buga/*.pli"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "detail": "Lista arquivos PL/I no diret√≥rio WSL"
        },
        {
            "label": "Run REXX",
            "type": "shell",
            "command": "regina",
            "args": ["${file}"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}